{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/scripts/pre-commit-quality-gate.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/scripts/quality-gate-trigger.sh",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(./.claude/scripts/*)",
      "Bash(echo *)",
      "Bash(cat *)", 
      "Bash(date)",
      "Task(*)",
      "Read(*)",
      "Write(*)",
      "Edit(*)"
    ]
  }
}
